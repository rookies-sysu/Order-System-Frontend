<!--components/card/card.wxml-->
<view class="wrapper" style="background-image: url({{image}})">
  <view class="card-text">
    <text class='card-title'>{{title}}\n</text>
    <text class='card-description'>{{description}}</text>
  </view>
  <view class="bg-blur" style="background-image: url({{image}})"></view>
  <view class="card-dish" wx-if="{{loading}}">
    <image class="card-dish-image" src="{{dish.imageURL}}"></image>
    <text class="card-dish-name">{{dish.name}}</text>
    <text class="card-dish-price">ï¿¥{{dish.price}}</text>
  </view>
</view>
