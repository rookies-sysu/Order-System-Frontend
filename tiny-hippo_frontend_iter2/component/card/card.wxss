/* components/card/card.wxss */

.wrapper {
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  margin-bottom: 30px;
  width: 330px;
  height: 330px;
  position: relative;

  background-size: cover;
  overflow: hidden;  
  
  border-radius: 5%;
  filter: drop-shadow(5px 15px 15px #ccc);
}

.card-text {
  padding: 20px;
}

.card-title {
  font-size: 28px;
  font-weight: bold;
  color: white;
}

.card-description {
  font-size: 12px;
  color: white;
}

.card-dish {
  padding-left: 10px;
  width: 100%;
  height: 70px;
  position: absolute;
  bottom: 0px;
  background-size: cover;
}

.bg-blur {
  width: 100%;
  height: 70px;
  position: absolute;
  bottom: 0px;
  filter: blur(3px);
  border-radius: 5%;
  background-position: bottom;
}

.card-dish-image {
  margin: 10px;
  width: 50px;
  height: 50px;
  border-radius: 15%;
}

.card-dish-name {
  font-size: 15px;
  font-weight: bold;
  color: white;
  margin-left: 5px;
  margin-top: 20px;
  position: absolute;
}

.card-dish-price {
  font-size: 12px;
  color: white;
  margin-left: 5px;
  margin-top: 40px;
  position: absolute;
}

