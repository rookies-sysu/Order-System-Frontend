/* components/card/card.wxss */

.wrapper {
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  margin-bottom: 30px;
  width: 330px;
  height: 330px;
  border-radius: 5%;
  background-size: cover;
  position: relative;
}

.card-text {
  padding: 20px;
}

.card-title {
  font-size: 28px;
  font-weight: bold;
  color: white;
}

.card-description {
  font-size: 12px;
  color: white;
}

.card-dish {
  background: white;
  padding: 10px;
  width: 100%;
  height: 30px;
  opacity: 0.5;
  position: absolute;
  bottom: 0px;
}
