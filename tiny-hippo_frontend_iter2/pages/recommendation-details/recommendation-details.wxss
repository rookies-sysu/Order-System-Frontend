/* pages/recommendation-details/recommendation-details.wxss */

.recommendation-description {
  margin: 20px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 15px;
}

.details-description {
  font-size: 12px;
  color: gray;
}

.details-dish {
  margin-top: 20px;
  margin-bottom: 20px;
}

.details-dish-image {
  width: 75px;
  height: 75px;
  border-radius: 15%;
}

.details-dish-info {
  margin-left: 20px;
  display: inline;
  position: absolute;
}

.details-dish-name {
  font-size: 15px;
  font-weight: bold;
}

.details-dish-price {
  font-size: 12px;
  margin-top: 10px;
  position: relative;
}

.details-dish-content {
  float: right;
  margin-right: 20px;
  margin-top: 20px;
}

.details-dish-content-number {
  font-size: 15px;
}

.iconfont {
  font-size: 15px;
}
